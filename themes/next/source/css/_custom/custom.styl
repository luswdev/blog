.page-category .main .sidebar
.page-post-categories .main .sidebar
.page-post-tags .main .sidebar
.page-archive .main .sidebar{
  .about-link {
    margin-bottom: 4.5em;
  }
}
.sidebar-menu{
  width: 100%; 
  //border-bottom: 1px solid #555;
  padding-bottom: 1em;
  margin-top: -1em;
}
.links-of-blogroll {
  border-top: 1px solid #282828;
  padding-bottom: 1em;
}

.links-of-blogroll-title 
.links-of-blogroll-title 
.toc-title {
  padding-left: 1em;
  font-size: 15px;
  i {
    display: none;
  }
}

.about-link{
  border-top: 1px solid #282828;
  padding: 1em 2em;
  width: 100%;
  
  a {
    line-height: initial;
    display: inline;
    font-size: 14px;
    padding: 5px 5px;
    color: #666;
    &:hover{
      color: #666 !important;
    }
  }
}
.sidebar .copyright{
    font-size: 13px;
    bottom: 0;
    /* margin-bottom: 0em; */
    padding: 0 2em 0;
    color: #666;
}
.site-overview {
  max-height: none !important;
}

// post
// --------------------------------------------------
div.footnotes > div.footnotelist > ol > li { list-style: none !important; }
.post-meta .post-category a,
.post-meta .post-time time { border-bottom: none; }
.main-inner {
  padding: 0 6em 2em;
  background-color: $dark-bg;
  border-radius: 4px;
}
.page-number {
  border-radius: 100%;
  width: 10px;
  &:hover {
    background-color: #555;
    color: $whitesmoke;
  }
}
.collection-title >h1 { margin-top: -1.06em; }
.footnotelist {
  border-bottom: none;
  ol {
    font-size: .8em;
    margin-left: 0;
  }
}
h1, h2, h3, h4, h5, h6 {color: $whitesmoke;}
h1 {
  +mobile(){
    font-size: 2.5em;
  }
}

.posts-expand h2,
.posts-expand h3,
.posts-expand h4,
.posts-expand h5,
.posts-expand h6{
  :before{
    content: "# ";
    color: $green;
  }
}

// footer
// --------------------------------------------------
.footer .author a {
	border-bottom:     none;
  color:            #555; 
}
.footer {
  background: $dark-bg;
  //margin-left: 285px;
}
.footer-inner {
  text-align: right;
}

// pages
// --------------------------------------------------
.tag-cloud-tags a { border-bottom: none; }
.page-archive {
  if mobile() {
    .post-type-normal > h1 {
      font-size: 2em !important;
    }
  } 
}
.posts-collapse .post-title a:hover {
  color: $whitesmoke;
}

