@import highlight;

body { 
  background: $dark-bg;
  overflow-x: hidden;
}
.main {
  padding-bottom: 0;
  padding-top: 3em;
  //margin-left: 285px;
  +mobile(){margin-left: 0;}
}

.page-post-detail .post-body {
  &:after{
    content: "— End —";
    text-align: center;
    width: 100%;
    font-family: Monotype Corsiva, Blackadder ITC, Brush Script MT, Bradley Hand ITC, Bell MT;
    font-size: 1.6em;
    //padding-bottom: 0.6em;
    color: #555;
    display: block;
  }
}

// Index
// --------------------------------------------------
p.description {
  font-size:     0.9em;
  margin-top:    10px;
  color:         $index-description-color;
  text-align:    center;
}
img.img-topic {
  display:       block ;
  margin-left:   .7em;
  margin-right:  .7em;
  padding:       0;
  float:         right;
  clear:         right;
  width:         100%;
}
.out-img-topic {
  display:       block;
  margin-bottom: 24px;
  overflow:      hidden;
}
h2.post-title .post-title-link {
  &:hover{
    color:         $whitesmoke;
  }
  &:before{
    content: "#";
    color: $green;
  }
}

// header
// --------------------------------------------------
#head-padding-top{
  height:            1em;
  +mobile(){
    display:         none;
  }
  +mobile-small(){
    display:         none;
  }
}
.header {
  left: 0;
  background-color:  $bg-less;
  width:             100% ;
  margin:            0 auto -.5em;
  padding:           0 4em 0;
  //border-radius:     4px;
  position: fixed;
  z-index: 1020;
  top: 0;
  height: 3em;
  /*+desktop-large() {
    & { width:       $content-desktop-large; }
  }*/
  +desktop-largest() {
    & { width:       $content-desktop-largest; }
  }
  +mobile() { 
    width:           auto; 
    padding:         0 1em;
    margin-bottom:   -4.5em !important;
  }
}
.container .header-inner {
  width:             100%;
  border-radius:     15px;
  padding: 15px 0 0;
  +mobile() {
    padding: 0;
  }
}

// logo
// --------------------------------------------------
.custom-logo-site-title
  background-color:       $bg-less;
  //padding-top:            50px;
  //padding-bottom:         20px; 
  +mobile()
    padding-bottom:       20px;
    padding-top:          12px;
  a
    float: left;
.site-title
  color:                  $green;
  //padding-left:  6em;
  top: -5px !important;
  //display: block !important;
  font-size: 2em;
  +mobile()
    font-size:            50px;
    padding-left: 0em;
.brand 
  background-color:       $bg-less;
  //display: block !important;

.custom-logo-image
  padding-left: 10px !important;
// nav
// --------------------------------------------------
nav.site-nav ul.menu > li > a:hover
  color:         $green; 
  border-bottom: none;

.menu-item-active a { color: $whitesmoke }
.site-nav
  float: left;
  padding-left: 5em; 
  +mobile()
    top: 48px;
    padding:1em 25px 1em;
    margin-left: -33px;
.menu .menu-item a
  padding: 0;
.menu
  margin-top: -5px !important;

.links-of-author {
  float:right;
  margin-right: 5em;
  margin-top: -3px;
  i {
    font-size: 20px;
  }
  +mobile(){ 
    display: none;
  }
}
.links-of-author a{ border:none; }
// pace
// --------------------------------------------------
.pace-activity {
  border-top-color: $green !important;
  border-left-color: $green !important;
}
.pace-progress-inner,
.pace-progress { background-color: $green !important; }
.pace{ background: #fff; !important}

// toc
// --------------------------------------------------
.post-toc .post-toc-content > ol {
    padding-top: 0 !important;
}
.post-toc a {
    border-bottom: none !important;
    padding:0 0 5px 10px;
}
li.active > ol > li > a{ padding-left: 25px; }
li.active > ol > li > ol > li > a { padding-left: 40px; }
li.active > ol > li > ol > li > ol > li > a { padding-left: 55px; }
.post-toc-wrap {
  padding-bottom: 1em;
  border-top: 1px solid #282828;
}

// sidebar
// --------------------------------------------------
.fa.fa-history.fa-{ padding: 0 }
.sidebar-toggle-line{ background-color: $dark-bg; }
.feed-link {
    margin-top: 15px;
    margin-left: 7px;
    a {
      border-radius: 15px !important;
    }
}
.main-inner aside.sidebar{ 
  background-color: #181818; 
  top: 3em;
  left:0;
  
    overflow-y: auto;
    overflow-x: hidden;
  &:hover {
    /* width */
    &::-webkit-scrollbar {
        width: 7px;
    } 

    /* Track */
    &::-webkit-scrollbar-track {
        background: #181818; 
    }

    /* Handle */
    &::-webkit-scrollbar-thumb {
        background: #333; 
        
    }

    /* Handle on hover */
    &::-webkit-scrollbar-thumb:hover {
        background: $trans; 
    }

    &::-webkit-scrollbar-thumb:window-inactive {
        background: $trans; 
    }
  }
}
.sidebar-nav .sidebar-nav-active { 
  border-color: $green; 
  background: $trans;
  color: $green;
}

.back-to-top { display:none;}
.links-of-blogroll-list { 
  //text-align: center;
  color: $text-color !important; 
  a{
    font-weight: bold;
    &:hover {
      background: #555;
    }
  }
}
.links-of-blogroll-title { margin-top: 1em; }
.toc-title-name,
.links-of-blogroll-title-name{color: hsl(0, 0%, 53.3%);}
.site-state-item > a:hover,
a.link_to_about .site-author-name:hover{ color: $green !important; }
.back-to-top{ 
  border-radius: 3px; 
  //left: 30px;
}
.sidebar-toggle { 
  border-radius: 100%; 
  top: 10px;
  left: 30px;
  background: #232323;
  padding: 12px;
  &:hover {
    background: #555;
  }
  .sidebar-toggle-line {
    background: $whitesmoke;
  }
}
.sidebar-nav li {
  border: 2px solid $sidebar-nav-color;
  border-radius: 15px;
  padding: 0 9px;
  font-weight: bold;
  &:hover {
    border-color: $green;
    color: $whitesmoke;
    background: $green;
  }
}
.post-toc-content{
  padding-left: 1em;
}
.toc-title {
  padding-top: 1em;
}

.sidebar-toggle {display: block;}
.sidebar-menu-item
{
  &:hover {
    background: #555 !important;
  }
  font-size: 16px;
  display: block;
  text-align: left;
  padding: 2px 24px 2px;
  i {
    font-size: 20px;
    padding-right: 1.5em;
    color: hsl(0, 0%, 53.3%);
  }
  span:hover
  &:hover{
    color: $text-color !important;
  }
  
}
.page-home .main .sidebar .sidebar-menu-item-home
.page-post-categories .main .sidebar .sidebar-menu-item-categories
.page-post-tags .main .sidebar .sidebar-menu-item-tags
