@import highlight;

body {
  background: $dark-bg;
  background-repeat: no-repeat;
  background-attachment:fixed;
}

// Index
// --------------------------------------------------
p.description {
  font-size:       0.9em;
  margin-top:      10px;
  color:           $index-description-color;
  text-align:      center;
}
img.img-topic {
  display:           block ;
  margin-left:       .7em;
  margin-right:      .7em;
  padding:           0;
  float:             right;
  clear:             right;
  width:             100%;
}
.out-img-topic {
  display:           block;
  margin-bottom:     24px;
  overflow:          hidden;
}
.posts-expand .post-title-link {color:$whitesmoke;}

// header
// --------------------------------------------------
#head-padding-top{
  height :1em;
  //background-color: rgba(0, 0, 0, 0.75);
  +mobile(){
    display: none;
  }
  +mobile-small(){
    display: none;
  }
}
.header {
  background-color: $dark-bg;
  width: $content-desktop ;
  margin: 0 auto -.5em;
  padding: 0 4em 0;
  border-radius: 4px;
  +desktop-large() {
    & { width: $content-desktop-large; }
  }
  +desktop-largest() {
    & { width: $content-desktop-largest; }
  }
  +mobile() { 
    width: auto; 
    padding: 1em 1em 4em;
    margin-bottom: -4.5em !important;
  }
}
.container .header-inner {
  width: 100%;
  //background-color: $black-dim;
  border-radius: 15px;
  
}

// logo
// --------------------------------------------------
.custom-logo-site-title {
  background-color: $dark-bg;
  padding-top: 50px;
  padding-bottom: 20px; 
  +mobile() {
    padding-bottom: 20px;
    padding-top: 20px;
  }
}
.site-title{
  color: $green;
  +mobile() {
    font-size: 50px;
  }
}
.site-brand-wrapper {
  border-radius: 15px;
  //background-color: $black-dim;
}
.brand { background-color: #282828; }

// nav
// --------------------------------------------------
nav.site-nav ul.menu > li > a:hover{ 
  color: $green; 
  border-bottom: none;
}
.page-home .menu-item-home a { border-bottom: none; }
.menu a {
}
.menu-item-active a { color: $whitesmoke}

// pace
// --------------------------------------------------
.pace-activity {
  border-top-color: $green !important;
  border-left-color: $green !important;
}

.pace-progress-inner
.pace-progress {
  background-color: $green !important;
}

// toc
// --------------------------------------------------
.post-toc a {
  border-bottom: none !important;
  padding:4px 0 5px 10px;
}
li.active > ol > li > a{ padding-left: 25px; }
li.active > ol > li > ol > li > a { padding-left: 40px; }
li.active > ol > li > ol > li > ol > li > a { padding-left: 55px; }

// sidebar
// --------------------------------------------------
.fa.fa-history.fa-{ padding: 0 }
.sidebar-toggle-line{ background-color: $dark-bg; }
.links-of-author {margin-top: 16px;}
.feed-link {
    margin-top: 15px;
    margin-left: 7px;
    a {
      border-radius: 15px !important;
    }
}
.sidebar{ 
  background-color: rgba(0, 0, 0, 0); 
  top: 1em;
}
.sidebar-nav .sidebar-nav-active { 
  border-color: $green; 
  background: rgba(0, 0, 0, 0);
  color: $green;
}

.back-to-top { color: $dark-bg; }
.links-of-blogroll-list { color: $text-color !important; }
.links-of-blogroll-title { margin-top: 1em; }
.links-of-author a{ border:none; }
.links-of-blogroll-title-name
{
  color: $green;
}
.site-state-item > a:hover
a.link_to_about .site-author-name:hover
{
  color: $green !important;
}
.back-to-top
.sidebar-toggle {
  border-radius: 3px; 
}
.sidebar-nav li {
  border: 2px solid $sidebar-nav-color;
  border-radius: 15px;
  padding: 0 9px;
  font-weight: bold;
  &:hover {
    border-color: $green;
    color : $whitesmoke;
    background: $green;
  }
}
.site-state-posts
.site-state-categories
.site-state-tags
{
  &:hover {color : #3555}
}
// post
// --------------------------------------------------
div.footnotes > div.footnotelist > ol > li { list-style: none !important; }
.post-meta .post-category a
.post-meta .post-time time {
  border-bottom: none;
}
.main-inner {
  padding: 0 4em 2em;
  background-color: $dark-bg;
  border-radius: 4px;
}
.page-number {
  border-radius: 100%;
  width: 10px;
  &:hover {
    background-color: #555;
    color: $whitesmoke;
  }
}
.collection-title >h1 {
  margin-top: -1.06em;
}
.footnotelist {
  border-bottom: none;
  ol {
    font-size: .8em;
    margin-left: 0;
  }
}
h1, h2, h3, h4, h5, h6 {color: $whitesmoke;}
h1{
  +mobile(){
    font-size: 2.5em;
  }
}

// gitment
// --------------------------------------------------
.gitment-editor-preview-field { background-color: #fff; }
.gitment-comment-header { background-color: $body-bg-color !important; }
.gitment-editor-submit 
.gitment-comments-init-btn {
  color: #555 !important;
  background-color: #fafafa !important;
  border-radius: 3px;
  border: 1px solid #555 !important;
  &:hover {
    color: $black-deep !important;
    background-color: #eee !important;
    border: 1px solid #eee !important;
  }
}
.gitment-editor-avatar
.gitment-header-issue-link
.gitment-editor-login-link
.gitment-editor-logout-link
.gitment-comment-name {
  border: none;
}

// footer
// --------------------------------------------------
.footer .author a {
	border-bottom:     none;
  color:            #555; 
}

// pages
// --------------------------------------------------
.tag-cloud-tags a {
	border-bottom: none;
}
.page-archive {
  if mobile() {
    .post-type-normal > h1 {
      font-size: 2em !important;
    }
  }
  
}

// gitalk
// --------------------------------------------------
.gt-header a, .gt-comments a, .gt-popup a
  border-bottom: none;
.gt-container .gt-popup .gt-action.is--active:before
  top: 0.7em;
.gt-container .gt-comment-content{
  background: #2d2d2d !important;
  border-radius: 5px;
  .gt-comment-body {
  color: $text-color !important;
  }
}
.gt-container .gt-comment-content:hover {
  -webkit-box-shadow: none !important;
  box-shadow: none !important;
}


.post-title {border-bottom:none;}

